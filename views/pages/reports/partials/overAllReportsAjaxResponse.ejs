<div class="card">
	<div class="card-body">
		<div class="row bg-dark text-white">
	    	<div class="form-group col-sm-4 border-bottom border-dark">
	    		<label for="year" class=" form-control-label">Income Sources</label>
            </div>
            <div class="form-group col-sm-4 border-bottom border-dark">
	    		<label for="amount" class=" form-control-label"><span>&#8377;</span>Incomes</label>
            </div>
            <div class="form-group col-sm-4 border-bottom border-dark">
	    		<label for="comment" class=" form-control-label"><span>&#8377;</span>Expenses</label>
            </div>
	    </div>
		<% for(i=0;i<reportsData.data.length; i++) { %>
		    <div class="row">
		    	<div class="form-group col-sm-4 border-bottom border-dark">
		           <%= reportsData.data[i].income_source%>
		        </div>
		        <div class="form-group col-sm-4 border-bottom border-dark">
		           <span>&#8377;</span><%= reportsData.data[i].overall_income%>
		        </div>
		        <div class="form-group col-sm-4 border-bottom border-dark">
		           <span>&#8377;</span><%= reportsData.data[i].overall_expense%>
		        </div>
		    </div>
	    <% } %>
	    <div class="row">
		    <div class="form-group col-sm-3 border-bottom border-dark">
		        <%= 'Total Income :-'%>
		    </div>
	    	<div class="form-group col-sm-3 border-bottom border-dark">
		        <span>&#8377;</span><%= reportsData.totalInc%>
		    </div>
		    <div class="form-group col-sm-3 border-bottom border-dark">
		        <%= 'Total Expense :-'%>
		    </div>
		    <div class="form-group col-sm-3 border-bottom border-dark">
		        <span>&#8377;</span><%= reportsData.totalExp%>
		    </div>
	    </div>
	    <div class="row">
		    <div class="form-group col-sm-3 border-bottom border-dark">
		        <%= '-'%>
		    </div>
		    <div class="form-group col-sm-3 border-bottom border-dark">
		        <%= '-'%>
		    </div>
	    	<div class="form-group col-sm-3 border-bottom border-dark">
		        <%= 'Balance :-'%>
		    </div>
		    <div class="form-group col-sm-3 border-bottom border-dark">
		        <span>&#8377;</span><%= reportsData.balance%>
		    </div>
	    </div>
	</div>
</div>